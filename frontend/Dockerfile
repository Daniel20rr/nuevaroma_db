FROM node:18-bullseye AS build

WORKDIR /app

# ============================================================
# üîß CONFIGURAR NPM PARA MAYOR ESTABILIDAD Y TIMEOUTS
# ============================================================
RUN npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm config set fetch-timeout 300000 && \
    npm config set registry https://registry.npmjs.org/

# Copiamos los archivos de dependencias
COPY package*.json ./

# Instalamos Angular CLI globalmente
RUN npm install -g @angular/cli@15.2.10

# ============================================================
# üì¶ INSTALACI√ìN DE DEPENDENCIAS CON REINTENTOS
# ============================================================
# Intentamos instalar, si falla reintentamos autom√°ticamente
RUN npm install --legacy-peer-deps || \
    (echo "Primer intento fall√≥, reintentando..." && npm install --legacy-peer-deps)

# Copiamos el c√≥digo fuente
COPY . .

# ============================================================
# üèóÔ∏è BUILD DE PRODUCCI√ìN
# ============================================================
RUN ng build --configuration production

# ============================================================
# üöÄ ETAPA DE RUNTIME CON NGINX (M√°s eficiente que http-server)
# ============================================================
FROM nginx:alpine AS runtime

WORKDIR /usr/share/nginx/html

# Removemos los archivos por defecto de nginx
RUN rm -rf ./*

# Copiamos la app compilada desde la etapa de build
# Copiamos todo el contenido de dist (sin importar el nombre de la carpeta)
COPY --from=build /app/dist ./

# Copiamos configuraci√≥n personalizada de nginx (opcional pero recomendado)
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Exponemos el puerto 80 (est√°ndar de nginx)
EXPOSE 80

# Comando para iniciar nginx
CMD ["nginx", "-g", "daemon off;"]